<h1>Articles</h1>

<% @articles.each do |article| %>
  <ul id="article-#{article.id}">
    <li><%= link_to article.title, article_path(article), class: 'article-title' %></li>
    <li><%= article.body %></li>
  </ul>
  <% end %>

<%= link_to "Create a New Article", new_article_path, class: "new-article" %>
